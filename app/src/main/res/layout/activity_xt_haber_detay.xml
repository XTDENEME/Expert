<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context="com.example.ext01d1840.expert.xtHaberDetay"
    android:foregroundGravity="left">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:id="@+id/hdImage"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/hdImage"
                android:layout_alignEnd="@+id/hdImage"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/tvDetay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@+id/tvBaslik"
                android:layout_alignStart="@+id/hdImage"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
